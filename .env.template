# PipeGuard Configuration
# Copy this file to .env and customize the values

# ======================
# GitHub Configuration
# ======================
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USER=your_github_username
GITHUB_REPO=your_repository_name

# ======================
# Google Cloud Configuration
# ======================
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# ======================
# Email Notifications
# ======================
# SMTP Configuration for email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_or_token
FROM_EMAIL=pipeguard-alerts@yourcompany.com

# ======================
# Advanced Monitoring
# ======================
# Performance thresholds (in seconds)
DURATION_WARNING_THRESHOLD=120
DURATION_CRITICAL_THRESHOLD=300

# Failure rate thresholds (as decimal, e.g., 0.1 = 10%)
FAILURE_RATE_WARNING=0.1
FAILURE_RATE_CRITICAL=0.2

# Auto-refresh interval (in seconds)
AUTO_REFRESH_INTERVAL=30

# ======================
# Dashboard Configuration
# ======================
# Maximum number of runs to display
MAX_RUNS_DISPLAY=20

# Maximum number of anomalies to display
MAX_ANOMALIES_DISPLAY=10

# Chart data points
CHART_DATA_POINTS=50

# ======================
# Development Settings
# ======================
# Set to True for development mode
DEBUG=True

# Flask host and port
FLASK_HOST=0.0.0.0
FLASK_PORT=8080

# ======================
# Security Settings
# ======================
# Secret key for Flask sessions (generate a random one for production)
SECRET_KEY=your-secret-key-here

# API rate limiting
API_RATE_LIMIT=100

# ======================
# Logging Configuration
# ======================
LOG_LEVEL=INFO
LOG_FILE=pipeguard.log
